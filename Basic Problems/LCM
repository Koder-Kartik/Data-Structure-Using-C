#To Find the LCM (Least Common Multiple) of Two Numbers

#include<stdio.h>
int main()
{
    int a,b,i;
    scanf("%d %d",&a,&b);
    if(a>b)
    i=a;
    else
    i=b;

    while(i<=a*b)
    {
        if(i%a==0 && i%b==0)
        {
        printf("lcm of both the no is %d", i);
        break;
        }
        
        i++;
    }
    
    return 0;
    
}
